<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_row="0"
    android:layout_column="0">
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/listItemNguoiRl1"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="Nguyễn Văn A"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/txtHoten"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHoten"
            android:textSize="25px"
            android:text="Chợ Đồn-Bắc Kạn"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/txtQueQuan"/>
    </GridLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_gravity="center|left">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/chkDaChon"
        android:onClick="chkDaChon_Click"/>
</RelativeLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="right|center">
        <Button
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="X"
            android:id="@+id/btnXoaItem"
            android:onClick="btnXoaItem_Click"/>
        <Button
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnXoaItem"
            android:text="E"
            android:id="@+id/btnSuaItem"
            android:onClick="btnSuaItem_Click"/>
    </GridLayout>
</GridLayout>