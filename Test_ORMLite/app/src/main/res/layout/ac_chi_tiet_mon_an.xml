<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activitys.AcChiTietMonAn"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBar"
        android:titleTextColor="@color/colorTextOnBar"
        android:title="Chi tiết"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:minHeight="100px"
                android:background="@android:color/holo_blue_light"
                android:id="@+id/ivHinhAnh"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10px"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên món ăn"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/lblTenMonAn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mức độ"
                    android:paddingBottom="10px"
                    android:textSize="12sp"
                    android:id="@+id/lblMucDo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"
                    android:layout_below="@id/lblMucDo"
                    android:id="@+id/lblMoTa"
                    android:paddingTop="@dimen/padding_1.5line"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyên liệu:"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/padding_1.5line"/>
                <TextView
                    android:id="@+id/lblNguyenLieu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_tab"
                    android:text=""/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cách làm:"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/padding_1.5line"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_tab"
                    android:text=""
                    android:id="@+id/lblCachLam"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
